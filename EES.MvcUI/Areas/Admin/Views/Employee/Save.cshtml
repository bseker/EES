

@model EmployeeSaveViewModel

@{
    ViewBag.Title = "Employee Save";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        Employee Save
        <small>
            <a href="@Url.Action("Index","Employee",new{area="Admin"})">
                <i class="glyphicon glyphicon-chevron-left"></i> Back to Employee List
            </a>
        </small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                @*<div class="box-header with-border">
                        <h3 class="box-title">Quick Example</h3>
                    </div>*@
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                     

                             
                                 @Html.HiddenFor(t=>t.Employee.EmployeeId)
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Employee.Name, "Name", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.TextBoxFor(t => t.Employee.Name, new { @class = "form-control"})
                                                                                @Html.ValidationMessageFor(t=>t.Employee.Name)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Employee.Surname, "Surname", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.TextBoxFor(t => t.Employee.Surname, new { @class = "form-control"})
                                                                                @Html.ValidationMessageFor(t=>t.Employee.Surname)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Employee.DepartmentId, "DepartmentId", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.Employee.DepartmentId,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.Employee.DepartmentId)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Employee.SupervisorId, "SupervisorId", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.Employee.SupervisorId,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.Employee.SupervisorId)
                                    </div>
                                </div>
                                          

                     
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info btn-flat pull-right">Save</button>
                    </div>
                }
            </div>

        </div>
    </div>
</section>

