@model EES.MvcUI.Areas.Admin.Models.EvaluationReportModels.EvaluationDetailViewModel

@{
    ViewBag.Title = "ViewEvaluationDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2 class="alert-info">Evaluation Detail</h2>

<div class="container">
    <div class="row-border">
        <h4>Evaluated Employee Details</h4>
        <table class="table">
            <thead>
                <tr>
                    <td>Evaluated Employee Name & Surname</td>
                    <td>Evaluation Score </td>
                    <td>Evaluation Comment </td>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.QuestionList[0].Name @Model.QuestionList[0].Surname</td>
                    <td>@Model.QuestionList[0].Score</td>
                    <td>@Model.QuestionList[0].CommentText </td>
                   
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                @*<div class="box-header with-border">
                        <h3 class="box-title">Quick Example</h3>
                    </div>*@
                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">

                       


                        @for (int i = 0; i < Model.QuestionList.Count; i++)
                        {
                            <div class="form-group">
                              
                                <div class="col-sm-6">
                                    @Html.LabelFor(t => t.QuestionList[i].QuestionText, Model.QuestionList[i].QuestionText)

                                   @* @Html.TextBoxFor(t => t.QuestionList[i].QuestionText , new { @readonly = "readonly"})*@
                                    @* @Html.ValidationMessageFor(t => t.Artist.ArtistName)*@
                                </div>
                                  <div class="col-sm-6">

                                      @Html.LabelFor(t => t.QuestionList[i].GivenRating, Model.QuestionList[i].GivenRating.ToString())

                                      @*@Html.TextBoxFor(t => t.QuestionList[i].GivenRating, new { @readonly = "readonly" })*@
                                    @* @Html.ValidationMessageFor(t => t.Artist.ArtistName)*@
                                </div>
                            </div>
                        }


                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info btn-flat pull-right">Print Evaluation</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
