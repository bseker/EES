

@{
    ViewBag.Title = "Role List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Role
        <small>Role List</small>

        <a href="@Url.Action("Create","Role",new{area="Admin"})" class="btn btn-xs btn-primary pull-right">
            <i class="glyphicon glyphicon-plus"></i> Add New Role
        </a>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                @*<div class="box-header">
                        <h3 class="box-title">Data Table With Full Features</h3>
                    </div>*@
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblRole" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                 
                                <th>RoleId</th> 
                                 
                                <th>RoleName</th> 
                                 
                                <th data-orderable="false"></th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>

@section scripts{
    <script>
        $(function () {
            $('#tblRole').DataTable({
                "processing": true,
                "ajax": '@Url.Action("List","Role",new{area="Admin"})',
                "deferRender": true,
                "columns": [
                     
                    { "data": "RoleId" },
                     
                    { "data": "RoleName" },
                     
                    {
                        "class": "text-center",
                        render: function (data, type, row) {
                            return '<a class="btn btn-xs btn-info btn-flat" href="@Url.Action("Edit","Role",new{area="Admin"})?roleId='+row.RoleId+'">Edit</a> ' +
                                   '<a class="btn btn-xs btn-danger btn-flat" href="@Url.Action("Delete","Role",new{area="Admin"})?roleId='+row.RoleId+'">Delete</a>';
                        }
                    }
                ]
            });
        });
    </script>
}