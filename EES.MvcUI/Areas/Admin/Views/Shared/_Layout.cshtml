

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Admin</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/Areas/Admin/Content/plugins/kendo-ui-core/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/plugins/kendo-ui-core/styles/kendo.bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/datatables/dataTables.bootstrap.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/skins/skin-blue.min.css">
    <link href="~/Areas/Admin/Content/css/custom.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery 2.2.3 -->
    <script src="~/Areas/Admin/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition skin-blue sidebar-mini">
    @Html.Partial("_Notification")
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Dashboard", new {area = "Admin"})" class="logo">
                 <!-- logo for regular state and mobile devices -->
                <span >&nbsp;&nbsp;&nbsp;&nbsp;EES Administration</span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only glyphicon glyphicon-menu-hamburger">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                       
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                @*<img src="~/Areas/Admin/Content/img/salihdemirog.jpg" class="user-image" alt="User Image">*@
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@HttpContext.Current.User.Identity.Name</span>
                            </a>
                        </li>
                       
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
               
                <ul class="sidebar-menu">
                    <li class="header">MENUS</li>
                    <!-- Optionally, you can add icons to the links -->
                     
                    @*<li><a href="@Url.Action("Index","Department",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>Department Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","Employee",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>Employee Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","EmployeeProject",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>EmployeeProject Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","EmployeeRole",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>EmployeeRole Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","Evaluation",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>Evaluation Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","EvaluationComment",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>EvaluationComment Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","EvaluationQuestionList",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>EvaluationQuestionList Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","EvaluationQuestion",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>EvaluationQuestion Manager</span></a></li>
                     
                      
                    <li><a href="@Url.Action("Index","LogType",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>LogType Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","Project",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>Project Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","Role",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>Role Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","SystemLog",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>SystemLog Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","SystemMode",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>SystemMode Manager</span></a></li>
                     
                    <li><a href="@Url.Action("Index","User",new{area="Admin"})"><i class="glyphicon glyphicon-link"></i> <span>User Manager</span></a></li>*@
                   @if (HttpContext.Current.User.IsInRole("HR User"))
                   {
                    <li class="treeview">
                        <a href="#">
                            <i class="glyphicon glyphicon-link"></i> <span>HR Actions</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#">System Mode Management</a></li>
                            <li><a href="#">Mail Utility</a></li>
                            <li><a href="/Admin/EvaluationQuestion">Evaluation Question Management</a></li>
                            <li><a href="/Admin/EvaluationReport">Evaluation Reporting</a></li>
                        </ul>
                    </li>
                   }
                    
                    @if (HttpContext.Current.User.IsInRole("IT User"))
                    {
                    <li class="treeview">
                        <a href="#">
                            <i class="glyphicon glyphicon-link"></i> <span>IT Actions</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#">System Mode Management</a></li>
                        </ul>
                    </li>
                    }
                    <li class="treeview">
                        <a href="#">
                            <i class="glyphicon glyphicon-link"></i> <span>Common Actions</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Home/Index">Return Homepage</a></li>
                        </ul>
                    </li>
                    
                   
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Group 3 version</b> 1.0.0
            </div>
            
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="glyphicon glyphicon-home"></i></a></li>
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="glyphicon glyphicon-cog"></i></a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane active" id="control-sidebar-home-tab">
                    <h3 class="control-sidebar-heading">Recent Activity</h3>
                    <ul class="control-sidebar-menu">
                        <li>
                            <a href="javascript:;">
                                <i class="menu-icon glyphicon glyphicon-cutlery bg-red"></i>
                                <div class="menu-info">
                                    <h4 class="control-sidebar-subheading">Langdon's Birthday</h4>
                                    <p>Will be 23 on April 24th</p>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.control-sidebar-menu -->
                    <h3 class="control-sidebar-heading">Tasks Progress</h3>
                    <ul class="control-sidebar-menu">
                        <li>
                            <a href="javascript:;">
                                <h4 class="control-sidebar-subheading">
                                    Custom Template Design
                                    <span class="pull-right-container">
                                        <span class="label label-danger pull-right">70%</span>
                                    </span>
                                </h4>
                                <div class="progress progress-xxs">
                                    <div class="progress-bar progress-bar-danger" style="width: 70%"></div>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.control-sidebar-menu -->
                </div>
                <!-- /.tab-pane -->
                <!-- Stats tab content -->
                <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
                <!-- /.tab-pane -->
                <!-- Settings tab content -->
                <div class="tab-pane" id="control-sidebar-settings-tab">
                    <form method="post">
                        <h3 class="control-sidebar-heading">General Settings</h3>
                        <div class="form-group">
                            <label class="control-sidebar-subheading">
                                Report panel usage
                                <input type="checkbox" class="pull-right" checked>
                            </label>
                            <p>
                                Some information about this general settings option
                            </p>
                        </div>
                        <!-- /.form-group -->
                    </form>
                </div>
                <!-- /.tab-pane -->
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>

    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Areas/Admin/Content/plugins/bootstrap/js/bootstrap.min.js"></script>
    @*<script src="~/Areas/Admin/Content/plugins/kendo-ui-core/js/kendo.core.min.js"></script>*@
    <script src="~/Areas/Admin/Content/plugins/kendo-ui-core/js/kendo.ui.core.min.js"></script>
    @*<script src="~/Areas/Admin/Content/plugins/kendo-ui-core/js/cultures/kendo.culture.tr-TR.min.js"></script>
      <script src="~/Areas/Admin/Content/plugins/kendo-ui-core/js/messages/kendo.messages.tr-TR.min.js"></script>*@

    <!-- DataTables -->
    <script src="~/Areas/Admin/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>

    @RenderSection("scripts", false)

    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Content/js/app.min.js"></script>
    <!-- Optionally, you can add Slimscroll and FastClick plugins.
    Both of these plugins are recommended to enhance the
    user experience. Slimscroll is required when using the
    fixed layout. -->
</body>
</html>


