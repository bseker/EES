
@{
    ViewBag.Title = "EmailUtility";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Email Utility
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
               <div class="box-header">
                        <h3 class="box-title">Employee List Who Is Not Finished Assigned Evaluations</h3>
                    </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblSystemLog" class="table table-bordered table-striped">
                        <thead>
                        <tr>

                            <th>EmployeeId</th>

                            <th>Name</th>

                            <th>Surname</th>

                            <th>DepartmentId</th>

                            <th data-orderable="false"></th>
                        </tr>
                        </thead>
                       
                    </table>
                    <button class="btn btn-xs btn-warning btn-flat">Send Reminder Mail to All</button>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>

@section scripts{
    <script>
        $(function () {
            $('#tblSystemLog').DataTable({
                "processing": true,
                "ajax": '@Url.Action("ReminderList","SystemSettings",new{area="Admin"})',
                "deferRender": true,
                "columns": [

                    { "data": "EmployeeId" },

                    { "data": "Name" },

                    { "data": "Surname" },

                    { "data": "DepartmentId" },

                    {
                        "class": "text-center",
                        render: function (data, type, row) {
                            return '<a class="btn btn-xs btn-info btn-flat" >Send Reminder Mail</a> ' ;
                        }
                    }
                ]
            });
        });
    </script>
}

