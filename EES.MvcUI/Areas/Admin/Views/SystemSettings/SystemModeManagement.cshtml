
@{
    ViewBag.Title = "SystemModeManagement";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        System Mode Management
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">System Mode Managements Can Be Done here</h3>
                </div>
                <div class="row">

                    <p style="margin-left:20%">This part will only be seen by HR User</p>
                    <div class="col-md-2">
                        <label>System Mode</label>
                    </div>
                    <div class="col-md-3">
                        <select class="form-control" id="SystemMode" name="SystemMode">
                            <option>Evaluation Mode</option>
                            <option>Reporting/Feedback Mode</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button class="btn-warning" type="button">Submit</button>
                    </div>
                </div>


                <hr/>
                <hr /><hr />
                <div class="row">
                    <p style="margin-left:20%">This part will only be seen by IT User</p>
                    <div class="col-md-2">
                        <label>System Mode</label>
                    </div>
                    <div class="col-md-3">
                        <button class="form-control"> Take System To Maintenance</button>
                    </div>
                    <div class="col-md-3">
                        <button class="form-control"> End Maintenance</button>
                    </div>
                </div>
                <hr />
            </div>
        </div>
    </div>
</section>


