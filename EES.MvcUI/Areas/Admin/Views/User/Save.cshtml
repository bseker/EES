

@model UserSaveViewModel

@{
    ViewBag.Title = "User Save";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        User Save
        <small>
            <a href="@Url.Action("Index","User",new{area="Admin"})">
                <i class="glyphicon glyphicon-chevron-left"></i> Back to User List
            </a>
        </small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                @*<div class="box-header with-border">
                        <h3 class="box-title">Quick Example</h3>
                    </div>*@
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                     

                             
                                 @Html.HiddenFor(t=>t.User.UserId)
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.User.email, "email", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.TextBoxFor(t => t.User.email, new { @class = "form-control"})
                                                                                @Html.ValidationMessageFor(t=>t.User.email)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.User.UserRole, "UserRole", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.TextBoxFor(t => t.User.UserRole, new { @class = "form-control"})
                                                                                @Html.ValidationMessageFor(t=>t.User.UserRole)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.User.EmployeeId, "EmployeeId", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.User.EmployeeId,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.User.EmployeeId)
                                    </div>
                                </div>
                                          

                     
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info btn-flat pull-right">Save</button>
                    </div>
                }
            </div>

        </div>
    </div>
</section>

