@model EES.MvcUI.Models.AuthModels.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<h2>Login</h2>


<section class="content-header">
    
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                @*<div class="box-header with-border">
                        <h3 class="box-title">Quick Example</h3>
                    </div>*@
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.HiddenFor(t => t.User.UserId)





                        <div class="form-group">
                            @Html.LabelFor(t => t.User.email, "Email", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(t => t.User.email, "Email")
                                @Html.ValidationMessageFor(t => t.User.email)
                            </div>
                        </div>

                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info btn-flat pull-right">Login</button>
                    </div>
                }
            </div>

        </div>
    </div>
</section>