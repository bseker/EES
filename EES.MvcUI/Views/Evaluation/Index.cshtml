

@{
    ViewBag.Title = "Evaluation List";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<section class="content-header">
    <h1>
        Evaluation
        <small>Evaluation List</small>

        <a href="@Url.Action("Create","Evaluation")" class="btn btn-xs btn-primary pull-right">
            <i class="glyphicon glyphicon-plus"></i> Add New Evaluation
        </a>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                @*<div class="box-header">
                        <h3 class="box-title">Data Table With Full Features</h3>
                    </div>*@
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblEvaluation" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                 
                                <th>EvaluationId</th> 
                                 
                                <th>Year</th> 
                                 
                                <th>CommentId</th> 
                                 
                                <th>ScoreId</th> 
                                 
                                <th>EmployeeId</th> 
                                 
                                <th data-orderable="false"></th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>

@section scripts{
    <script>
        $(function () {
            $('#tblEvaluation').DataTable({
                "processing": true,
                "ajax": '@Url.Action("List","Evaluation")',
                "deferRender": true,
                "columns": [
                     
                    { "data": "EvaluationId" },
                     
                    { "data": "Year" },
                     
                    { "data": "CommentId" },
                     
                    { "data": "ScoreId" },
                     
                    { "data": "EmployeeId" },
                     
                    {
                        "class": "text-center",
                        render: function (data, type, row) {
                            return '<a class="btn btn-xs btn-info btn-flat" href="@Url.Action("Edit","Evaluation")?evaluationId='+row.EvaluationId+'">Edit</a> ' +
                                   '<a class="btn btn-xs btn-danger btn-flat" href="@Url.Action("Delete","Evaluation")?evaluationId='+row.EvaluationId+'">Delete</a>';
                        }
                    }
                ]
            });
        });
    </script>
}