

@model EES.MvcUI.Models.EvaluationModels.EvaluationSaveViewModel

@{
    ViewBag.Title = "Evaluation Save";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}


<section class="content-header">
    <h1>
        Evaluation Save
        <small>
            <a href="@Url.Action("Index","Evaluation",new{area="Admin"})">
                <i class="glyphicon glyphicon-chevron-left"></i> Back to Evaluation List
            </a>
        </small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                @*<div class="box-header with-border">
                        <h3 class="box-title">Quick Example</h3>
                    </div>*@
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                     

                             
                                 @Html.HiddenFor(t=>t.Evaluation.EvaluationId)
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Evaluation.Year, "Year", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.Evaluation.Year,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.Evaluation.Year)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Evaluation.CommentId, "CommentId", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.Evaluation.CommentId,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.Evaluation.CommentId)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Evaluation.Score, "Score", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.Evaluation.Score,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.Evaluation.Score)
                                    </div>
                                </div>
                                          

                     

                            
                                <div class="form-group">
                                    @Html.LabelFor(t => t.Evaluation.EmployeeId, "EmployeeId", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                                                                @Html.EditorFor(t => t.Evaluation.EmployeeId,"Number")
                                                                                @Html.ValidationMessageFor(t=>t.Evaluation.EmployeeId)
                                    </div>
                                </div>
                                          

                     
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info btn-flat pull-right">Save</button>
                    </div>
                }
            </div>

        </div>
    </div>
</section>

