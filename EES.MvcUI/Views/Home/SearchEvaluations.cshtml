@{
    ViewBag.Title = "SearchEvaluations";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}


<section class="content-header">
    <h1>
        Search Evaluations
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of the Conducted Evaluations</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblEvaluationSearch" class="table table-bordered table-striped">
                        <thead>
                            <tr>

                                <th>EmployeeId</th>

                                <th>Name</th>

                                <th>Surname</th>

                                <th>Evaluation Year</th>

                                <th>Evaluation Score</th>


                                <th data-orderable="false"></th>
                            </tr>
                        </thead>

                    </table>
                   
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>

@section scripts{
    <script>
        $(function () {
            $('#tblEvaluationSearch').DataTable({
                "processing": true,
                "ajax": '@Url.Action("GetSearchEvaluationsList", "Home")',
                "deferRender": true,
                "createdRow": function(row, data, dataIndex) {
                    if (dataIndex === "4") {
                        $(row).addClass('bg-red');
                    }
                },
                "columns": [

                    { "data": "EvaluationId" },

                    { "data": "EvaluatedEmployeeName" },

                    { "data": "EvaluatedEmployeeSurname" },

                    { "data": "Year" },
                    { "data": "Score" }

                  
                ]
            });
        });
    </script>
}

